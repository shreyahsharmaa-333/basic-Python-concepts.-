Task 1: Read a File and Handle Errors

try:
    # Step 1: Open and read the file
    with open("sample.txt", "r") as file:
        print("File content:\n")
        # Step 2: Print file content line by line
        for line in file:
            print(line.strip())

# Task 2: Write and Append Data to a File

# Step 1: Take user input and write it to the file
user_input = input("Enter some data to write into the file: ")

with open("output.txt", "w") as file:
    file.write(user_input + "\n")  # Write user input

print("Data written to output.txt.")

# Step 2: Append additional data to the same file
append_data = input("Enter additional data to append: ")

with open("output.txt", "a") as file:
    file.write(append_data + "\n")  # Append new data

print("Additional data appended to output.txt.")

# Step 3: Read and display final content of the file
print("\nFinal content of output.txt:")
with open("output.txt", "r") as file:
    for line in file:
        print(line.strip())




